<header class='c-post-header'>
  <h1 class='c-post-header__title'>{{ title }}</h1>

  {{#if custom_excerpt}}
    <p class='c-post-header__excerpt'>{{ custom_excerpt }}</p>
  {{/if}}

  {{#is 'post'}}
    <div class='c-post-header__meta'>
      {{#primary_author}}
      {{!-- This url link links to posts by the author, but I'd like to change it to link to posts by date --}}
        {{<a href='{{ url }}' class='c-post-header__author'> }}
          {{#if profile_image}}
            <!--
            <div class='c-post-header__author_media'>
              <img 
                class='c-post-header__author_image lazyload' 
                data-src='{{ img_url profile_image size='profile-image-small' }}' 
                alt='{{ name }}' 
                width='32' 
                height='32'
              />
            </div>
            -->
          {{/if}}
          <div class='c-post-header__author_info'>
            <div class='c-post-header__author_name'>{{ name }}</div>
      {{/primary_author}}
            <time class='c-post-header__date u-type-uppercase' datetime='{{ date format='YYYY-MM-DD' }}'>{{ date format='D MMM YYYY' }} â€” </time>
            <span class='c-post-header__reading-time u-type-uppercase'>{{ reading_time minute=(t '1 min read') minutes=(t '% min read') }}</span>
          </div>
        </a>
    </div>
  {{/is}}

  {{#if feature_image}}
    <figure class='c-post-media'>
      <img
        alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
        class='c-post-media__image lazyload'
        data-src='{{ img_url feature_image size='feature-image-large' }}'
      >
      {{#if feature_image_caption}}
        <figcaption class='c-post-media__caption'>{{ feature_image_caption }}</figcaption>
      {{/if}}
    </figure>
  {{/if}}
</header>