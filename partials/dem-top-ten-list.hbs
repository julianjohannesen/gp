<style>
    .dem-top-ten-list {
        align-items: flex-start;
        color: #414141;
        display: flex;
        flex-flow: row wrap;
        gap: 1em;
        justify-content: center;

    }
    

    .dem-top-ten-list ol {
        margin: 0;
    }
    
    .voting {
        background-color: #bce2fe;
        /* Force the row to wrap under a certain size */
        min-width: 250px;
        width: calc(50% - 1em);
    }

    .elections {
        background-color: #baf1fd;
        /* Force the row to wrap under a certain size */
        min-width: 250px;
        width: 50%;
    }

    /* Header and List Item Background Colors */
    .voting .header {
        background-color: #043b94;
    }
    .elections .header {
        background-color: #00a9cc;
    }

    /* Section Header Typography */
    .voting .header,
    .elections .header {
        color: white;
        font-weight: bold;
        font-size: clamp(2em, 4vw, 4em);
        line-height: 1.2em;
        padding: 0.5em;
        position: relative;
        text-align: center;

    }

    .voting .header span,
    .elections .header span {
        font-weight: 100;
    }

    .header-arrow {
        position: absolute;
        bottom: 0;
        margin-bottom: -29px;
        left: calc(50% - 30px);
    }

    /* List Item Layout */
    .top-ten-list-item {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        align-items: flex-start;
        margin: clamp(2em, 2vw, 3em);

    }

    .top-ten-list-item p {
        width: 100%;
    }

    .top-ten-list-item .header {
        background-color: white;
        color:#414141;
        counter-increment: li;
        font-size: clamp(1.5em, 2vw, 2em);
        font-weight: bold;

        padding: 0.5em;
    }

     .top-ten-list-item .header::before {
        content: counter(li);
        font-weight: bold;
        border-radius: 50%;
        background: #b6242a;
        text-align: center;
        color: white;
        padding: 2px 12px;
        margin: 0.5em;
        font-size: 30px;
        vertical-align: top;
    }

    .top-ten-list-item .icon {
        background: #043b94 no-repeat center/100% scroll content-box;
        background-size: contain;
        width: 100%;
        height: 240px;
        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
        position: relative;
    }

    .elections .icon {
        background-color: #00a9cc;
    }

    .top-ten-list-item p.go {

        align-items: center;
        background-color: #00a9cc;
        border-radius: 50%;
        color: white;
        display: flex;
        font-size: 36px;
        font-weight: bold;
        font-style: italic;
        height: 70px;
        justify-content: center;
        padding-right: 5px;
        text-shadow: 1px 2px #9b9b9b;
        width: 72px;

        margin-block-end: 30px;
        margin-inline-end: 34px;
    }

    .elections p.go {
        background-color: #043b94;
    }

    .top-ten-list-item p.go::before {
        content: "";
        position: absolute;
        bottom: 0;
        margin-bottom: -1px;
        right: 40px;
    }

    .arrow-down {
        width: 0; 
        height: 0; 
        border-left: 30px solid transparent;
        border-right: 30px solid transparent;
        
        border-top: 30px solid #043b94;
    }

    .elections .arrow-down {
        border-top: 30px solid #00a9cc;
    }

    .arrow-up,
    .top-ten-list-item p.go::before {
        width: 0; 
        height: 0; 
        border-left: 30px solid transparent;
        border-right: 30px solid transparent;
        
        border-bottom: 30px solid #fff;
    }

     p.description {
        align-items: flex-start;
        display: flex;
        font-size: clamp(0.9em, 2vw, 1.25em);
        font-weight: bold;
        padding: 1rem;
    }

    .sdr .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-same-day-registration.png");
    }
    .avr .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-auto-register.png");
    }
    .mb-evip .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-vote-by-mail.png");
    }
    .vrr .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-past-convicts.png");
    }
    .npea .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-nonpartisan.png");
    }

    .rcv .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-ranked-choice.png");
    }
    
    .npr .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-redistricting.png");
    }
    
    .opr .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-open-primaries.png");
    }
    
    .rmec .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-electoral-college.png");
    }
    
    .cfr .icon {
        background-image: url("../assets/img/dem-top-ten/pillsbury-icons-finance-reform.png");
    }

    @media (max-width:904px) {
        .voting, 
        .elections {
            width: 100%;
        }
    }
   
    
</style>

<section class="dem-top-ten-list">
    <div class="voting">
        <div class="header">
            {{!-- <span>1-5</span><br />  --}}
            Access to the Ballot
            <span class="arrow-down header-arrow"></span>
        </div>
        <ol class="wrapper">
            <li class="top-ten-list-item sdr one">
                <div class="icon"><p class="go"><a href="/same-day-registration" title="Same Day Registration">GO</a></p></div>
                <p class="header">Same Day Registration</p>
