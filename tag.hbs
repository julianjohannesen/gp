{{!< default}}

{{#contentFor 'title'}}{{ meta_title }}{{/contentFor}}

{{#tag}}
  <div class='o-grid' style="margin:0">
    {{!-- JJ removed o-grid__col--center o-grid__col--2-3-l  --}}
    <div class='o-grid__col  o-grid__col--9-10-m '>
      {{!-- JJ replaced original tag template header section with section from index.hbs  --}}
      <div class='c-archive' style="padding-top:2em; padding-bottom:0; border:none; margin:0;">
        <h1 class='c-archive__title'>{{ name }}</h1>
      </div>
      {{#if description}}
        <p class='c-archive__description'>{{ description }}</p>
      {{/if}}
    </div>
  </div>
{{/tag}}

<div class='o-grid post-list' style="margin-top: 3em;">
    {{!-- JJ removed o-grid__col--center o-grid__col--2-3-l  --}}
  <div class='o-grid__col o-grid__col--9-10-m'>
    {{> loop }}
  </div>
</div>

<div class='o-grid'>
  {{ pagination }}
</div>